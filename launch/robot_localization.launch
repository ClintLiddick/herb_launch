<launch>
    <node pkg="robot_localization" type="ukf_localization_node" name="ukf_localization" clear_params="true">
        <param name="two_d_mode" value="true"/>
        <!--<param name="debug" value="true"/>-->

        <!-- Defaults to "map" if unspecified -->
        <param name="map_frame" value="map"/>
        <!-- Defaults to "odom" if unspecified -->
        <param name="odom_frame" value="odom"/>
        <!-- Defaults to "base_link" if unspecified -->
        <param name="base_link_frame" value="base_link"/>
        <!-- Defaults to the value of "odom_frame" if unspecified -->
        <param name="world_frame" value="odom"/>

        <param name="odom0" value="segway_rmp_node/odom" />
        <rosparam param="odom0_config">
            [false, false, false,
             false, false, false,
             true, false, false,
             false, false, true,
             false, false, false]
        </rosparam>
     </node>

    <node pkg="stargazer" node="stargazer_publisher.py" name="stargazer">
        <rosparam command="load" file="$(find herb_launch)/config/stargazer.yaml"/>
    </node>
</launch>
